                if (distance < maxDistance) {
                    const strength = (1 - distance / maxDistance) * 0.3;
                    const moveX = x * strength;
                    const moveY = y * strength;
                    
                    magneticButton.style.transform = `translate(${moveX}px, ${moveY}px) scale(1.05)`;
                }
            });
            
            magneticButton.addEventListener('mouseleave', () => {
                magneticButton.style.transform = 'translate(0, 0) scale(1)';
            });
        }
    </script>
