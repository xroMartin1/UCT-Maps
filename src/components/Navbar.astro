---
// Obtener la ruta actual
const currentPath = Astro.url.pathname;

// Función para verificar si el link está activo
const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};
---

<header class="fixed top-0 w-full bg-white/95 backdrop-blur-lg shadow-lg z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 ">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <img src="logo.png" alt="Logo UCT" class="h-10 w-auto md:h-12" />
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex absolute left-1/2 transform -translate-x-1/2">
        <ul class="flex space-x-8 lg:space-x-12">
          <li>
            <a 
              href="/" 
              class={`nav-link px-3 py-2 text-sm lg:text-base font-medium relative transition-colors ${
                isActive('/') 
                  ? 'text-blue-600 font-semibold border-blue-600' 
                  : 'text-gray-700 hover:text-blue-600'
              }`}
            >
              Inicio
            </a>
          </li>
          <li>
            <a 
              href="/#visor-section" 
              class="nav-link text-gray-700 hover:text-blue-600 px-3 py-2 text-sm lg:text-base font-medium relative transition-colors"
            >
              Mapa
            </a>
          </li>
          <li>
            <a 
              href="/information" 
              class={`nav-link px-3 py-2 text-sm lg:text-base font-medium relative transition-colors ${
                isActive('/information') 
                  ? 'text-blue-600 font-semibold border-blue-600' 
                  : 'text-gray-700 hover:text-blue-600'
              }`}
            >
              Información
            </a>
          </li>
          <li>
            <a 
              href="/contacts" 
              class={`nav-link px-3 py-2 text-sm lg:text-base font-medium relative transition-colors ${
                isActive('/contacts') 
                  ? 'text-blue-600 font-semibold border-blue-600' 
                  : 'text-gray-700 hover:text-blue-600'
              }`}
            >
              Contacto
            </a>
          </li>
        </ul>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="overflow-hidden max-h-0 opacity-0 md:hidden bg-white/95 backdrop-blur-lg border-b border-gray-100 shadow-lg transition-all duration-300 ease-in-out">
    <div class="px-4 py-6 space-y-4">
      <a 
        href="/" 
        class={`block py-3 px-4 rounded-lg text-base ${
          isActive('/') 
            ? 'text-blue-600 font-semibold bg-blue-50' 
            : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50 font-medium transition-all'
        }`}
      >
        Inicio
      </a>
      <a 
        href="/#visor-section" 
        class="block text-gray-700 hover:text-blue-600 hover:bg-gray-50 py-3 px-4 rounded-lg text-base font-medium transition-all"
      >
        Mapa
      </a>
      <a 
        href="/information" 
        class={`block py-3 px-4 rounded-lg text-base ${
          isActive('/information') 
            ? 'text-blue-600 font-semibold bg-blue-50' 
            : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50 font-medium transition-all'
        }`}
      >
        Información
      </a>
      <a 
        href="/contacts" 
        class={`block py-3 px-4 rounded-lg text-base ${
          isActive('/contacts') 
            ? 'text-blue-600 font-semibold bg-blue-50' 
            : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50 font-medium transition-all'
        }`}
      >
        Contacto
      </a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      if (menu.classList.contains('max-h-0')) {
        // Abrir menú
        menu.style.maxHeight = menu.scrollHeight + 'px';
        menu.style.opacity = '1';
        menu.classList.remove('max-h-0', 'opacity-0');
      } else {
        // Cerrar menú
        menu.style.maxHeight = '0';
        menu.style.opacity = '0';
        menu.classList.add('max-h-0', 'opacity-0');
      }
    });

    // Cerrar menú al hacer clic en enlaces
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menu.style.maxHeight = '0';
        menu.style.opacity = '0';
        menu.classList.add('max-h-0', 'opacity-0');
      });
    });

    // Cerrar menú en pantallas grandes
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) {
        menu.style.maxHeight = '0';
        menu.style.opacity = '0';
        menu.classList.add('max-h-0', 'opacity-0');
      }
    });
  }
</script>